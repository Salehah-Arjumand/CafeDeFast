<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context=".AdminDuties">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_marginBottom="30dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:padding="5dp"
                app:srcCompat="@drawable/yback" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bungee"
            android:text="What would you like to do?"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="-10dp"
            android:textColor="#000"
            android:textSize="38dp"
            />
        <RelativeLayout
            android:id="@+id/currentOrders"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="-20dp"
            android:background="@drawable/outlinewidget">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="44dp"
                android:layout_marginBottom="44dp"
                android:fontFamily="@font/bungee"
                android:text="Current Orders"
                android:textColor="#41444b"
                android:textSize="24dp"></TextView>

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="31dp"
                android:src="@drawable/currentorders" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/addCategory"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="-12dp"
            android:background="@drawable/outlinewidget">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="44dp"
                android:layout_marginBottom="44dp"
                android:fontFamily="@font/bungee"
                android:text="Add Category"
                android:textColor="#41444b"
                android:textSize="24dp"></TextView>

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="31dp"
                android:src="@drawable/addcategory" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/updateCategory"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="-12dp"
            android:background="@drawable/outlinewidget">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="44dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="44dp"
                android:fontFamily="@font/bungee"
                android:text="Update Category"
                android:textColor="#41444b"
                android:textSize="24dp"></TextView>

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="31dp"
                android:src="@drawable/updatecategory" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/deleteCategory"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="-12dp"
            android:background="@drawable/outlinewidget">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="44dp"
                android:layout_marginBottom="44dp"
                android:fontFamily="@font/bungee"
                android:textColor="#41444b"
                android:text="Delete Category"
                android:textSize="24dp"
                ></TextView>

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="31dp"
                android:src="@drawable/deletecategory"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/addItem"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="-12dp"
            android:background="@drawable/outlinewidget">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="44dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="44dp"
                android:fontFamily="@font/bungee"
                android:text="Add Item"
                android:textColor="#41444b"
                android:textSize="24dp"></TextView>

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="31dp"
                android:src="@drawable/additem" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/updateItem"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="-12dp"
            android:background="@drawable/outlinewidget">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="44dp"
                android:layout_marginBottom="44dp"
                android:fontFamily="@font/bungee"
                android:textColor="#41444b"
                android:text="Update Item"
                android:textSize="24dp"></TextView>
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="31dp"
                android:src="@drawable/updateitem"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/deleteItem"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="-12dp"
            android:background="@drawable/outlinewidget">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="44dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="44dp"
                android:fontFamily="@font/bungee"
                android:text="Delete Item"
                android:textColor="#41444b"
                android:textSize="24dp"></TextView>

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="31dp"
                android:src="@drawable/deleteitem" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/availability"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="-12dp"
            android:background="@drawable/outlinewidget">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="44dp"
                android:layout_marginBottom="44dp"
                android:fontFamily="@font/bungee"
                android:textColor="#41444b"
                android:text="Availability"
                android:textSize="24dp"></TextView>
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="31dp"
                android:src="@drawable/availability"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/addAmount"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="-12dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/outlinewidget">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="44dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="44dp"
                android:fontFamily="@font/bungee"
                android:text="Add Amount"
                android:textColor="#41444b"
                android:textSize="24dp"></TextView>

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="31dp"
                android:src="@drawable/addamount" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>