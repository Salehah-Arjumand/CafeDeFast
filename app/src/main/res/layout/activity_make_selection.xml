<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff"
    tools:context=".MakeSelection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">
    <ImageView
        android:id="@+id/selection"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/yselection"/>

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-25dp"
        android:fontFamily="@font/bungee"
        android:gravity="center"
        android:text="Make Selection"
        android:textColor="#000"
        android:textSize="38dp" />
    <TextView
        android:id="@+id/moreText"
        android:layout_width="250dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Select which contact detail should we use to reset your password"
        android:textSize="18dp"
        android:layout_marginTop="-15dp" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:id="@+id/vieSms"
        android:background="@drawable/outlinewidget"
        android:padding="10dp">
        <ImageView
            android:id="@+id/mobileIcon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/dphone"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/mobileTitle"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal"
            android:text="via sms:"
            android:textSize="25dp"
            android:layout_toRightOf="@id/mobileIcon"/>
        <TextView
            android:id="@+id/mobileDesc"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_horizontal"
            android:text="+923365578326"
            android:textSize="25dp"
            android:textColor="#000"
            android:layout_below="@id/mobileTitle"
            android:layout_toRightOf="@id/mobileIcon"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/vieEmail"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:background="@drawable/outlinewidget"
        android:padding="10dp">
        <ImageView
            android:id="@+id/emailIcon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/dmail"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/emailTitle"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal"
            android:text="via email:"
            android:textSize="25dp"
            android:layout_toRightOf="@id/emailIcon"/>
        <TextView
            android:id="@+id/emailDesc"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_horizontal"
            android:text="i170051@nu.edu.pk"
            android:textSize="25dp"
            android:textColor="#000"
            android:layout_below="@id/emailTitle"
            android:layout_toRightOf="@id/emailIcon"/>

    </RelativeLayout>


</LinearLayout>